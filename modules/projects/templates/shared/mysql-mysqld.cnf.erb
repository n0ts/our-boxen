[mysqld]
user = <%= scope.lookupvar('::boxen_user') %>
pid-file = <%= scope.lookupvar('boxen::config::homebrewdir') %>/var/run/mysql.pid
socket = <%= scope.lookupvar('boxen::config::homebrewdir') %>/var/run/mysql.sock
port = 3306
datadir = <%= scope.lookupvar('boxen::config::homebrewdir') %>/var/mysql

collation_server = utf8mb4_unicode_ci
character_set_server = utf8mb4
skip-character-set-client-handshake

default_password_lifetime = 0

log-error = <%= scope.lookupvar('boxen::config::homebrewdir') %>/var/log/mysql/mysql.log
log_timestamps = SYSTEM
log_slow_admin_statements
log_slow_slave_statements
long_query_time = 0.1
slow_query_log
slow_query_log_file = <%= scope.lookupvar('boxen::config::homebrewdir') %>/var/log/mysql/mysql-slow.log

explicit_defaults_for_timestamp
lower_case_table_names = 2
# [Warning] 'user' entry 'root@localhost' ignored in --skip-name-resolve mode.
#skip_name_resolve
skip_external_locking
default_storage_engine = InnoDB
transaction_isolation = REPEATABLE-READ	
secure_file_priv = /tmp

sql_mode = TRADITIONAL,NO_AUTO_VALUE_ON_ZERO,ONLY_FULL_GROUP_BY

key_buffer_size = 32M
max_allowed_packet = 32M
max_connections = 16
max_connect_errors = 10000
max_heap_table_size = 64M
myisam_sort_buffer_size = 1M
join_buffer_size = 256K
query_cache_type = 0
query_cache_size = 0M
read_buffer_size = 128K
read_rnd_buffer_size = 256K
table_open_cache = 16
thread_cache_size = 16
tmp_table_size = 16M
sort_buffer_size = 4M
wait_timeout = 180

show_compatibility_56 = 1

performance_schema = ON
performance_schema_instrument = '%=off'

innodb_strict_mode
innodb_buffer_pool_size= 128M
innodb_buffer_pool_instances = 1
innodb_buffer_pool_load_at_startup = 1
innodb_buffer_pool_dump_at_shutdown = 1
innodb_data_file_path = ibdata1:128M:autoextend
innodb_file_per_table
innodb_flush_log_at_trx_commit = 1
innodb_large_prefix = 1
innodb_log_buffer_size = 16M
innodb_log_file_size = 128M
innodb_log_files_in_group = 2
innodb_lock_wait_timeout = 120
innodb_max_dirty_pages_pct = 90
innodb_monitor_enable = all
innodb_print_all_deadlocks = 1
innodb_support_xa = 1
innodb_read_io_threads = 8
innodb_write_io_threads= 8
